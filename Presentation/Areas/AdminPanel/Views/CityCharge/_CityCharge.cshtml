@model DTO.Request.CityCharge.CityChargeRequestDto
<form>
    <div class="form-wrapper city-form">
        <div class="form-wrapper_logo">
            <img src="~/assets/images/logo.png" alt="#" />
        </div>
        <div class="form-wrapper_header">
            Subscribe to bring a bargain for the entire family
        </div>
        <div class="form-wrapper_form">
            <div class="form-box">
                <div class="form-header">
                    <h2>Customer Info</h2>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            <label for="city">City*</label>
                            <input type="text" placeholder="City" class="form-control" asp-for="CityName" id="City">
                            <span asp-validation-for="CityName" class="text-danger errormsg"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            <label for="price">Price*</label>
                            <input type="text" placeholder="Price" class="form-control" asp-for="Price" id="Price">
                            <span asp-validation-for="Price" class="text-danger errormsg"></span>
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-wrap justify-content-end form-button">
                    <button type="button" class="btn cancel-default-btn" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary price-submit" onclick="saveUpdate()">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="~/assets/js/chargecard/charge-card.js" asp-append-version="true"></script>


