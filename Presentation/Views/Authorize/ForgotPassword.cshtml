@model ForgetPasswordRequest
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
    var successMessage = ViewBag.SuccessMsg != null ? ViewBag.SuccessMsg.ToString() : string.Empty;
}

<!doctype html>
<html lang="en">
<head>
    <!--  meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Third Party css -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Theme css -->
    <link href="~/assets/css/styles.css" rel="stylesheet" />
    <style>
        .email-error{
            font-size: 12px !important;
            color: red;
        }
    </style>
</head>

<body>
    <!-- Authentication Pages -->
    <div class="authentication-container">
        <!-- Form Section -->
        <div class="auth-form">
            <div class="logo"></div>
            <h1 class="title" style="margin-bottom: 2rem!important;">Forgot Password</h1>
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="form-label-group" style="margin-bottom: 2rem;">
                    <span class="" style="color: green; font-size: 12px !important;">@successMessage</span>
                </div>
            }
            else
            {
                <div class="form-label-group" style="margin-bottom: 2rem;">
                    <span class="email-error">@ViewBag.ErrorMsg</span>
                </div>
            }
            <h2 style="margin-bottom: 2rem; font-size: 14px; color: grey;">Enter the email you've registered with <br /> we'll send you the instructions there </h2>
           
            @using (Html.BeginForm("ForgotPassword", "Authorize", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="control-label d-block">Email</label>
                    <input asp-for="Email" type="email"
                           class="form-control-line"
                           placeholder="yourname@email.com" maxlength="150" autocomplete="off" />
                    <span asp-validation-for="Email" class="errormsg email-error"></span>
                </div>
                <div class="form-button">
                    <button class="btn btn-primary btn-lg w-100 mb-3">Send Email</button>
                </div>
                <div>
                    <p> Go back <a asp-controller="Authorize" asp-action="Login" class="font-14">Sign In</a></p>
                </div>
            }
        </div> 
    </div>
    <!-- //Authentication Pages -->


</body>
</html>
<script src="~/assets/js/ThirdPartyPlugIn/Jquery/jquery.min.js"></script>
<script src="~/assets/js/ThirdPartyPlugIn/Popper/popper.min.js"></script>
<script src="~/assets/js/ThirdPartyPlugIn/Bootstrap/bootstrap.min.js"></script>
<script src="~/assets/js/ThirdPartyPlugIn/Jquery/jquery.validate.min.js"></script>
<script src="~/assets/js/ThirdPartyPlugIn/Jquery/jquery.validate.unobtrusive.min.js"></script>
<script src="~/assets/js/ThirdPartyPlugIn/Toastr.min.js"></script>
