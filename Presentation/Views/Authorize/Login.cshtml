@model AuthenticateUserRequest
@{
    ViewData["Title"] = "Login";
    Layout = null;
    var successMessage = TempData["SuccessMesage"] != null ? TempData["SuccessMesage"].ToString() : string.Empty;
}

<!doctype html>
<html lang="en">
<head>
    <!--  meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Third Party css -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Theme css -->
    <link href="assets/css/styles.css" rel="stylesheet">
    <style>
        .errormsg {
            font-size: 12px !important;
            color: red;
        }
    </style>
</head>
<body>
    <!-- Authentication Pages -->
    <div class="authentication-container">
        <!-- Form Section -->
        <div class="auth-form">
            <div class="logo"></div>
            <h1 class="title" style=" margin-bottom: 1rem!important;">Log in</h1>
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="form-label-group" style="margin-bottom: 2rem;">
                    <span class="" style="color: green; font-size: 12px !important;">@successMessage</span>
                </div>
            }
            else
            {
                <div class="form-label-group" style="margin-bottom: 2rem;">
                    <span class="errormsg">@ViewBag.ErrMsg</span>
                </div>
            }
            <form enctype="multipart/form-data" method="post" asp-controller="Authorize" asp-action="login" asp-route-returnurl="@ViewData[" ReturnUrl"]">
                <div class="form-group">
                    <label class="control-label d-block">Email</label>
                    <input asp-for="Email" type="email"
                           class="form-control-line"
                           placeholder="yourname@email.com" autocomplete="off" />
                    <span asp-validation-for="Email" class="errormsg"></span>
                </div>
                <div class="form-group">
                    <label class="control-label d-block">Password</label>
                    <div class="field-icon">
                        <input asp-for="Password" type="password"
                               class="form-control-line"
                               placeholder="Password" autocomplete="off" />
                        <span class="fas fa-eye-slash form-icon toggle-password"></span>
                        <span asp-validation-for="Password" class="errormsg"></span>
                    </div>
                </div>
                <div class="form-button">
                    <button class="btn btn-primary btn-lg w-100 mb-3">Login</button>
                    <a asp-controller="Authorize" asp-action="ForgotPassword" class="font-14">Forgot password?</a>
                </div>
            </form>
        </div>
    </div>
    <!-- //Authentication Pages -->


</body>
</html>
<script src="~/assets/js/ThirdPartyPlugIn/Jquery/jquery.min.js"></script>
<script src="~/assets/js/ThirdPartyPlugIn/Popper/popper.min.js"></script>
<script src="~/assets/js/ThirdPartyPlugIn/Bootstrap/bootstrap.min.js"></script>
<script src="~/assets/js/ThirdPartyPlugIn/Jquery/jquery.validate.min.js"></script>
<script src="~/assets/js/ThirdPartyPlugIn/Jquery/jquery.validate.unobtrusive.min.js"></script>
<script src="~/assets/js/ThirdPartyPlugIn/Toastr.min.js"></script>